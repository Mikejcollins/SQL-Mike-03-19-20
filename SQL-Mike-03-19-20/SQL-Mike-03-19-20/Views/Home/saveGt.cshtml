

@model List<SQL_Mike_03_19_20.Models.testimonial>
@{
    ViewBag.Title = "saveGt";
    Layout = null;

}


<table class="table">
    
    <thead>
    <tr>
        <th scope="col">Author</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        if (@item.Author != null && @item.Content != null)
        {
            <tr>
                <td>@item.Author</td>
                <td>@item.Content</td>
                <td>
                    <a href="#" class="btn btn-info btn-lg">
                        <span class="glyphicon glyphicon-remove"></span> Remove
                    </a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>




