    </div>
    <button id="addText">Add to content</button>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            console.log("ready!");
            $("#t1,#t2,#t3").click(function () {
                amount = $(this).data("amount");
                alert("clicked! " + amount)

                //var ids = $("#t1", "#t2", "#t3")
                //"
                $.get("/testimonials/createByNumber?amount=" + amount).done(function (response) {
                    alert(response);
                });
               // $.get("@Url.Action("createByNumber")" + "?amount=" + amount).done(function (response) {
               //     alert(response);
               // });

            });

            $("#addText").click(function () {
                //want to add this to content
                lorum = $("#lorumIpsum").text();
                $(".content-text").text(lorum);
            });

        });

    </script>

}